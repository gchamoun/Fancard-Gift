        {
            "type": "text",
            "id": "title",
            "label": "Heading"
        },
        {
            "type": "richtext",
            "id": "desc",
            "label": "Text",
            "default": "<p>Use a logo and text to link to a delivery partner such as UberEATS or Favor. This section is not intended for products ordered through your Shopify store.</p>"
        },
        {
            "type": "text",
            "id": "link_title",
            "label": "Button label",
            "default": "Learn more"
        },
        {
            "type": "text",
            "id": "link",
            "label": "Button link"
        }
    ],
    "presets": [
        {
