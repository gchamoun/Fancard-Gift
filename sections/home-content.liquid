


{% if section.blocks.size > 0 %}
<section class="section section--full-bg" data-section-id="{{ section.id }}" data-section-type="home-promo">
    <div class="home-promo">
        
        {% for block in section.blocks %}
        <div class="home-promo__item {% if block.settings.bg_color == 'white' %} block--no-bg{% else %} block--has-bg{% endif %}" {{ block.shopify_attributes }}>
            <div class="home-promo__item-bg u-bg-{{ block.settings.bg_color }}"></div>
            <div class="container container--mob-0">

                <div class="home-promo__content">
                    <div class="o-layout u-flex u-flex--middle">

                   
                      
                      <div class="image-header-mobile">
                            <div class="home-promo__media">
                                {% unless block.settings.image == blank %}
                                    <img src="{{ block.settings.image | img_url: '100x' }}" data-src="{{ block.settings.image | img_url: '980x' }}" alt="{{ block.settings.image.alt }}" class="home-promo__media-img lazyload">
                                {% else %}
                                    {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                                    {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                                {% endunless %}
                                {% unless block.settings.video == blank %}
                                
                                    {% capture video_url %}{% if block.settings.video.type == 'youtube' %}//www.youtube.com/watch?v={{ block.settings.video.id }}{% elsif block.settings.video.type == 'vimeo' %}//vimeo.com/{{ block.settings.video.id }}{% endif %}{% endcapture %}

                                    <div class="home-promo__media-video">
                                        <a href="{{ video_url }}" class="home-promo__media-video__btn c-btn c-btn--primary c-btn--play icon-fallback js-pop-video">
                                            <i class="icon icon--play" aria-hidden="true"></i>
                                            <span class="icon-fallback__text">{{ 'sections.video.play_label' | t }}</span>
                                        </a>
                                    </div>
                                {% endunless %}
                            </div>
                        
                                                    </div>

                        
                      
                      
                      
                      
                       
                       <div style="padding-left: 0" class="o-layout__item u-1/1 u-1/2@desk">
                            <div style="z-index: 5;" class="home-promo__box{% if block.settings.link != blank %} home-promo__box--btn{% endif %}">
                              
                                {% unless block.settings.title == blank %}
                              <div class="home-promo__text">	
                                <h1 style = "font-size:2.9rem;"  class="text-center">{{ block.settings.title | escape }}</h2>
                          <h3 style ="margin-top:-16px; color: #01b2e3" class="text-center";>GIVE THE GIFT THAT CAN'T LOSE</h3>

                              </div>
                                {% endunless %}
                                {% unless block.settings.desc == blank %}
                                    <div class="home-promo__text">{{ block.settings.desc }}</div>
                                {% endunless %}
                              

                              
                                <center> <a href="/collections/all" class=" c-btn c-btn--primary c-btn--arrow">GIVE LIKE A CHAMPION</a>  
                              
                              </center>
                                {% unless block.settings.link == blank %}
                                    <a href="{{ block.settings.link }}" class="home-promo__btn c-btn c-btn--primary c-btn--arrow">{{ block.settings.link_title | escape }}</a>
                                
                              {% endunless %}
                                                         </div>
                        </div>
                      
                      
                      
                        <div class="image-header o-layout__item u-1/1 u-1/2@desk">
                            <div class="home-promo__media">
                                {% unless block.settings.image == blank %}
                                    <img src="{{ block.settings.image | img_url: '100x' }}" data-src="{{ block.settings.image | img_url: '980x' }}" alt="{{ block.settings.image.alt }}" class="home-promo__media-img lazyload">
                                {% else %}
                                    {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                                    {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                                {% endunless %}
                                {% unless block.settings.video == blank %}
                                
                                    {% capture video_url %}{% if block.settings.video.type == 'youtube' %}//www.youtube.com/watch?v={{ block.settings.video.id }}{% elsif block.settings.video.type == 'vimeo' %}//vimeo.com/{{ block.settings.video.id }}{% endif %}{% endcapture %}

                                    <div class="home-promo__media-video">
                                        <a href="{{ video_url }}" class="home-promo__media-video__btn c-btn c-btn--primary c-btn--play icon-fallback js-pop-video">
                                            <i class="icon icon--play" aria-hidden="true"></i>
                                            <span class="icon-fallback__text">{{ 'sections.video.play_label' | t }}</span>
                                        </a>
                                    </div>
                                {% endunless %}
                            </div>
                        
                      
                      
                      
                      </div>  
                    </div>
                </div>

            </div>
        </div>
        {% endfor %}

    </div>
</section>
{% endif %}

{% if section.blocks.size == 0 %}
    <div class="placeholder-noblocks">
        {{ 'homepage.onboarding.no_content' | t }}
    </div>





{% endif %}




{% schema %}
{
    "name": "Image with text",
    "class": "js-section__home-promo",
    "max_blocks": 5,
    "blocks": [
        {
            "type": "image",
            "name": "Image block",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image",
                    "info": "800px width recommended."
                },
                {
                    "type": "select",
                    "id": "bg_color",
                    "label": "Background color",
                    "default": "grey",
                    "options": [
                        {
                            "value": "grey",
                            "label": "Default grey"
                        },
                        {
                            "value": "brand",
                            "label": "Brand"
                        },
                        {
                            "value": "accent",
                            "label": "Accent"
                        },
                        {
                            "value": "white",
                            "label": "White"
                        },
                        {
                            "value": "black",
                            "label": "Black"
                        }
                    ]
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Heading",
                    "default": "Image with text"
                },
                {
                    "type": "richtext",
                    "id": "desc",
                    "label": "Text",
                    "default": "<p>Use these blocks to share your brand's story. You can focus on a particular collection, a product detail, or even embed a video.</p>"
                },
                {
                    "type": "video_url",
                    "id": "video",
                    "label": "YouTube or Vimeo link",
                    "accept": [
                        "youtube",
                        "vimeo"
                    ]
                },
                {
                    "type": "text",
                    "id": "link_title",
                    "label": "Button label",
                    "default": "More info"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Button link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Image with text",
            "category": "Image",
            "blocks": [
                {
                    "type": "image"
                },
                {
                    "type": "image",
                    "settings": {
                        "bg_color": "white"
                    }
                }
            ]
        }
    ]
}
{% endschema %}
